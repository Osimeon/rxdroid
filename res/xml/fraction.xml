<?xml version="1.0" encoding="utf-8"?>
<!-- 
	Simple keyboard, very similar to the stock android numeric keyboard. The
	decimal separator key ('.') was replaced with a key for writing fractions
	(marked "A b/c", analogous to some calculators) which produces a slash ('/').
	Also, the shift button on the bottom left was replaced with a help button,
	aiding the user in typing fractions.
	
	This layout is based heavily on android's kbd_phone.xml from the LatinIME input
	method.
 -->
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="0px"
    android:verticalGap="0.035in"
    android:keyHeight="0.290in"
    android:keyWidth="20%p"
>

	<Row android:rowEdgeFlags="top">
		<Key android:codes="49" android:keyLabel="1" android:keyEdgeFlags="left" style="@style/keypad_digit"/>
		<Key android:codes="50" android:keyLabel="2" />
		<Key android:codes="51" android:keyLabel="3" />
		<Key android:codes="45" android:keyLabel="-" 
			android:isModifier="true" 
			android:keyEdgeFlags="right" 
		/>
	</Row>
	
	<Row>
		<Key android:codes="52" android:keyLabel="4" android:keyEdgeFlags="left" />
		<Key android:codes="53" android:keyLabel="5" />
		<Key android:codes="54" android:keyLabel="6" />
		<Key android:codes="47" android:keyLabel="A b/c" 
			android:isModifier="true" 
			android:keyEdgeFlags="right" 
		/>
	</Row>
	
	<Row>
		<Key android:codes="55" android:keyLabel="7" android:keyEdgeFlags="left" />
		<Key android:codes="56" android:keyLabel="8" />
		<Key android:codes="57" android:keyLabel="9" />
		<Key android:codes="-5" android:keyIcon="@drawable/sym_keyboard_delete"
			isModifier="true" android:isRepeatable="true" />
	</Row>
	
	<Row android:rowEdgeFlags="bottom">
		<Key android:codes="-1" android:keyLabel="Help" android:keyEdgeFlags="left" />
		<Key android:codes="48" android:keyLabel="0" />
		<Key android:codes="32" android:keyIcon="@drawable/sym_keyboard_space" />
		<Key android:codes="10" android:keyIcon="@drawable/sym_keyboard_return" 
			isModifier="true" android:keyEdgeFlags="right" />
	</Row>
	
</Keyboard>
