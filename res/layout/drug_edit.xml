<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
 	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:orientation="vertical"
	android:fillViewport="true">
	
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="5sp"
		>
			
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal"
			>

				<EditText android:id="@+id/drug_name" 
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:hint="Drug name"
					android:singleLine="true"
					android:inputType="textCapWords"
				/>
				
				<ImageButton android:id="@+id/delete_drug"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/android:ic_delete"
					android:onClick="onDeleteDrug"
				/>
			
			</LinearLayout>
						
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:padding="10sp"	
			>
				
				<TextView 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Intake schedule"
					android:background="#333333"
					style="@style/android:TextAppearance.Small"
				/>				
				
				<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TableRow>
						<TextView 
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="center|left"
							android:text="Morning"
							style="@style/android:TextAppearance.Medium"
						/>
						
						<at.caspase.rxdroid.DoseView android:id="@+id/morning" 
							android:layout_gravity="right"
						/>	
						
					</TableRow>
					<TableRow>
						<TextView 
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="center|left"
							android:text="Noon"
							style="@style/android:TextAppearance.Medium"
						/>
						
						<at.caspase.rxdroid.DoseView android:id="@+id/noon" 
							android:layout_gravity="right"
						/>	
							
					</TableRow>
					<TableRow>
						<TextView 
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="center|left"
							android:text="Evening"
							style="@style/android:TextAppearance.Medium"
						/>
						
						<at.caspase.rxdroid.DoseView android:id="@+id/evening" 
							android:layout_gravity="right"
						/>	
								
					</TableRow>
					<TableRow>
						<TextView 
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="center|left"
							android:text="Night"
							style="@style/android:TextAppearance.Medium"
						/>
						
						<at.caspase.rxdroid.DoseView android:id="@+id/night" 
							android:layout_gravity="right"
						/>	
							
					</TableRow>
					<TableRow>
						<TextView 
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="center|left"
							android:text="Frequency"
							style="@style/android:TextAppearance.Medium"
						/>
						
						<Spinner android:id="@+id/drug_frequency_chooser"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:clipChildren="true"
							android:layout_gravity="right"
							android:entries="@array/drug_repeat"
						/>		
					
					</TableRow>
							
				</TableLayout>
				
				<TextView 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="Miscellaneous"
					android:background="#333333"
					style="@style/android:TextAppearance.Small"
				/>
				
				<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
				>
					<TableRow>
						<TextView 
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_weight="1"
							android:gravity="center|left"
							android:text="Drug form"
							
							style="@style/android:TextAppearance.Medium"
						/>
						
						<Spinner android:id="@+id/drug_form_chooser" 
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:clipChildren="true"
							android:layout_gravity="right"
							android:entries="@array/drug_forms"
						/>						
					</TableRow>
					 
					<TableRow android:baselineAligned="false">
						<TextView 
							android:layout_width="fill_parent"
							android:layout_height="60dip"
							android:layout_weight="1"
							android:gravity="center|left"
							android:text="Current supply"
							
							style="@style/android:TextAppearance.Medium"
						/>
						
						<at.caspase.rxdroid.EditFraction android:id="@+id/current_supply"
							android:layout_width="60dip"
							android:layout_height="wrap_content"
							android:text="0"
							android:singleLine="true"
							android:hint="Current supply"
							android:clickable="true"
						/>						
					</TableRow>
					
					<TableRow>
						<TextView 
							android:layout_width="fill_parent"
							android:layout_height="60dip"
							android:layout_weight="1"
							android:gravity="center|left"
							android:text="Doses per package"
							
							style="@style/android:TextAppearance.Medium"
						/>
						
						<EditText android:id="@+id/refill_size"
							android:layout_width="60dip"
							android:layout_height="wrap_content"
							android:text="0"
							android:singleLine="true"
							android:inputType="number"
						/>						
					</TableRow>
					
					<TableRow>
						<TextView 
							android:layout_width="fill_parent"
							android:layout_height="60dip"
							android:layout_weight="1"
							android:gravity="center|left"
							android:text="Active"
							
							style="@style/android:TextAppearance.Medium"
						/>
						
						<CheckBox android:id="@+id/drug_active"
							android:checked="true"				
						/>					
					</TableRow>
										 
				</TableLayout>	
		    </LinearLayout>
	    </LinearLayout>
</ScrollView>

