<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="center"
	
>

	<ViewSwitcher android:id="@+id/drug_list_view_flipper"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
	/>
		 
	 <LinearLayout 
	 	android:layout_width="fill_parent"
	 	android:layout_height="wrap_content"
	 	android:orientation="horizontal"
	 	android:background="#ff6600"
	 >
	 	<ImageButton android:id="@+id/med_list_prev"
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"
	 		android:layout_gravity="left"
	 		android:onClick="onNavigationClick"
	 		android:src="@drawable/arrow_left"
	 	/>	 	
		 
		 <TextView android:id="@+id/med_list_footer"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_weight="1"
			style="@style/android:TextAppearance.Large"
			android:text="2011-02-07"
			android:textSize="24sp"
			android:textColor="#000000"
			android:gravity="center"			
			android:clickable="true"
			android:onClick="onNavigationClick"
		/>		
		
		
		<ImageButton android:id="@+id/med_list_next"
	 		android:layout_width="wrap_content"
	 		android:layout_height="wrap_content"	 			 		
	 		android:layout_gravity="right"
	 		android:onClick="onNavigationClick"
	 		android:src="@drawable/arrow_right"
	 	/>
	
	</LinearLayout>
	 
</LinearLayout>
