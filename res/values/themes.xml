<resources xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:rxdroid="http://schemas.android.com/apk/res/at.jclehner.rxdroid"
>
	<style name="DefaultTheme" parent="@style/DarkTheme" />
	<style name="DefaultTheme.NoAnimation" parent="@style/DefaultTheme">
		<item name="android:windowAnimationStyle">@null</item>		
	</style>
	
	<style name="LightTheme" parent="@style/_ApiSpecificLightTheme">
		<item name="drugIconTablet">@drawable/ic_drug_tablet_black</item>
		<item name="drugIconTube">@drawable/ic_drug_tube_black</item>
		<item name="drugIconGlass">@drawable/ic_drug_glass_black</item>
		<item name="drugIconSyringe">@drawable/ic_drug_syringe_black</item>
		<item name="drugIconRing">@drawable/ic_drug_ring_black</item>
		
		<item name="doseStatusTaken">@drawable/ic_dose_taken_dark</item>
		<item name="doseStatusMissed">@drawable/ic_dose_forgotten_dark</item>
		<item name="doseStatusIgnored">@drawable/ic_dose_ignored_dark</item>
		
		<item name="textColorClickable">@color/black_clickable</item>
		
		<item name="iconLowSupplies">@drawable/ic_low_supply_warning</item>
		<item name="iconMissedDose">@drawable/ic_warning</item>
		
		<item name="dividerColor">@color/list_divider_light</item>
		
		<item name="android:windowAnimationStyle">@null</item>
	</style>
	
	<style name="DarkTheme" parent="@style/_ApiSpecificDarkTheme">
		<item name="drugIconTablet">@drawable/ic_drug_tablet_white</item>
		<item name="drugIconTube">@drawable/ic_drug_tube_white</item>
		<item name="drugIconGlass">@drawable/ic_drug_glass_white</item>
		<item name="drugIconSyringe">@drawable/ic_drug_syringe_white</item>
		<item name="drugIconRing">@drawable/ic_drug_ring_white</item>
		
		<item name="doseStatusTaken">@drawable/ic_dose_taken</item>
		<item name="doseStatusMissed">@drawable/ic_dose_forgotten</item>
		<item name="doseStatusIgnored">@drawable/ic_dose_ignored</item>
		
		<item name="textColorClickable">@color/white_clickable</item>
		
		<item name="iconLowSupplies">@drawable/ic_low_supply_warning_white</item>
		<item name="iconMissedDose">@drawable/ic_warning_white</item>
		
		<item name="dividerColor">@color/list_divider_dark</item>
		
		<item name="android:windowAnimationStyle">@null</item>
	</style>
	
	<style name="TextAppearance.Large.Clickable" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">?attr/textColorClickable</item>
	</style>	
	
	<style name="_ApiSpecificLightTheme" parent="@android:style/Theme.Light" />
	<style name="_ApiSpecificDarkTheme" parent="@android:style/Theme" />
	
	<style name="BottomBar">
		<item name="android:background">@android:drawable/bottom_bar</item>
	</style>
</resources>
