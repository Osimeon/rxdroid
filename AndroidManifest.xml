<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="at.caspase.rxdroid">
    
    <uses-permission android:name="android.permission.VIBRATE" />
    
        
    <application android:icon="@drawable/ic_launcher" android:debuggable="true">
        <activity android:name=".DrugListActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="at.caspase.rxdroid.DrugEditActivity">
        	<intent-filter>
        		<action android:name="android.intent.action.VIEW" />
        		<category android:name="android.intent.category.DEFAULT" />
        		<action android:name="android.intent.action.EDIT" />
        		<category android:name="android.intent.category.DEFAULT" />
        	</intent-filter>
        
        
        </activity>
        
        <uses-library android:name="android.test.runner" />
        <service android:name=".DrugNotificationService"></service>
     </application>
	
	<instrumentation android:name="android.test.InstrumentationTestRunner"
		android:targetPackage="at.caspase.openmedmind" android:label="Open MedMind Tests" />
	<uses-sdk android:minSdkVersion="7"></uses-sdk>
</manifest> 