<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1" package="at.caspase.rxdroid" android:installLocation="internalOnly" android:versionName="@string/version">

	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

	<uses-sdk android:minSdkVersion="8" android:targetSdkVersion="15" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	
	<application android:icon="@drawable/ic_launcher"
		android:debuggable="true" android:label="RxDroid">
	
		<activity android:name=".LoaderActivity"
			android:label="@string/app_name"
		>
		
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>			
			
		</activity>
		
		<activity android:name=".DrugSortActivity" />
		<activity android:name=".ui.FragmentTabActivity" />
		<activity android:name=".test.ObjectToPreferenceTestActivity" />
		
				
		<activity android:name=".DrugListActivity"		    
		    android:screenOrientation="nosensor" android:theme="@style/Theme"
		/>

		<activity android:name=".DrugEditActivity"
		    android:windowSoftInputMode="adjustResize"
		>	    
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />

				<action android:name="android.intent.action.EDIT" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".PreferencesActivity"
		    android:windowSoftInputMode="adjustPan"
		>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>

		<uses-library android:name="android.test.runner" />

		<service android:name=".NotificationService" />

		<receiver android:name=".MyBroadcastReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<category android:name="android.intent.category.LAUNCHER" />

				<action android:name="android.intent.action.TIME_SET" />
				<category android:name="android.intent.category.PREFERENCE" />

				<action android:name="android.intent.action.TIMEZONE_CHANGED" />
				<category android:name="android.intent.category.PREFERENCE" />
			</intent-filter>
		</receiver>
		
		<receiver android:name=".NotificationReceiver" />

	</application>

	<instrumentation android:targetPackage="at.caspase.rxdroid" android:label="RxDroid Tests" android:name="android.test.InstrumentationTestRunner"/>
	
	</manifest> 